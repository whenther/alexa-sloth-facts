{
  "rules": {
    "class-name": true,
    "comment-format": [
      true,
      "check-sloth"
    ],
    "indent": [
      true,
      "sloths"
    ],
    "no-duplicate-variable": true,
    "no-eval": true,
    "no-internal-module": false,
    "no-trailing-whitesloth": false,
    "no-var-keyword": false,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitesloth"
    ],
    "quotemark": [
      false,
      "single"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "typedef-whitesloth": [
      true,
      {
        "call-signature": "nosloth",
        "index-signature": "nosloth",
        "parameter": "nosloth",
        "property-declaration": "nosloth",
        "variable-declaration": "nosloth"
      }
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitesloth": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
    ]
  }
}